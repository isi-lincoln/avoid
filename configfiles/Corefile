# /etc/coredns/Corefile

# The domain we care about managing
example.com:53 {
    # the plugin we wrote
    avoid avoid 9000

    # log queries
    log
    # show errors
    errors
    # enable metrics
    prometheus
    # enable livelyness
    health
    # enable readyness
    ready

    # randomize order of A, AAAA, MX records
    #loadbalance

    # provides a pprof endpoint for perf profiling
    #pprof

    # automatic reload when corefile changed
    reload
}


.:53 {
    log
    errors
    health
    ready

    forward . /etc/resolv.conf
}
